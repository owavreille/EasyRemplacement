<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="mb-0"><%= event.site.name %></h5>
  <% if current_user&.admin? %>
    <%= link_to edit_event_path(event), class: 'btn btn-outline-primary btn-sm' do %>
      <i class="bi bi-pencil"></i>
    <% end %>
  <% end %>
</div>

<div class="list-group list-group-flush mb-4">
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span><i class="bi bi-clock me-2"></i>Horaires</span>
    <span><%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %></span>
  </div>
  
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span><i class="bi bi-person me-2"></i>Médecin</span>
    <span>Dr <%= event.doctor.last_name %> <%= event.doctor.first_name %></span>
  </div>
  
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span><i class="bi bi-people me-2"></i>Patients</span>
    <span><%= event.number_of_patients %></span>
  </div>
  
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span><i class="bi bi-percent me-2"></i>Reversion</span>
    <span><%= event.reversion %> %</span>
  </div>
  
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span><i class="bi bi-person-plus me-2"></i>Consultation Aidée</span>
    <span><%= event.helper ? 'Oui' : 'Non' %></span>
  </div>
</div>

<div class="alert alert-info mb-3">
  <i class="bi bi-info-circle me-2"></i>
  Durée minimale : <%= @app_settings.minimal_replacement_length %> heures
</div>
