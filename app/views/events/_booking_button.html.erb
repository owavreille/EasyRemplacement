<div class="d-flex justify-content-between align-items-center">
  <% if event.user_id.present? %>
    <span class="badge bg-secondary px-3 py-2">
      <i class="bi bi-calendar-check me-2"></i>Déjà réservé
    </span>
  <% else %>
    <%= button_to event_booking_path(event), 
                method: :post, 
                class: 'btn btn-primary', 
                data: { 
                  turbo_confirm: 'Confirmez-vous la réservation de ce remplacement ?',
                  turbo_frame: '_top'
                } do %>
      <i class="bi bi-calendar-plus me-2"></i>Réserver
    <% end %>
  <% end %>
  <%= link_to events_path, class: "btn btn-outline-secondary", data: { turbo_frame: '_top' } do %>
    <i class="bi bi-arrow-left me-2"></i>Retour
  <% end %>
</div>
</div>