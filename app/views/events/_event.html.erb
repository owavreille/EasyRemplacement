<% event_start = event.start_time.strftime("%H:%M") %>
<% event_end = event.end_time.strftime("%H:%M") %>
 
  <div class="card m-3 mx-auto" style="border-left: 5px solid <%= event.site.color %>; max-width: 30rem;">
   <div class="card-header">
    Résumé du Remplacement à venir :
  </div>
                <div class="card-body" style="overflow-wrap: break-word;">
                    <div class="d-flex justify-content-between"><%= event.site.name %> 
                      <% if current_user && current_user.admin? %>
                      <%= link_to edit_event_path(event), class: 'btn btn-outline-primary m-1' do %>
                       <i class="bi bi-pencil"></i>
                      <% end %>
                      <% end %>
                    </div>
                  <hr>
                  <strong>Horaires :</strong> <%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %><br>
                  <strong>Médecin :</strong> Dr <%= event.doctor.last_name %> <%= event.doctor.first_name %><br>
                  <strong>Nb de Patients :</strong> <%= event.number_of_patients %><br>
                  <strong>Taux de Reversion :</strong> <%= event.reversion %> %<br>
                  <strong>Cs Aidée :</strong> <%= event.helper ? 'oui' : 'non' %>
                  <% if event.editable == true %>
                  <hr>
                  <div>
                  <% if event.helper == false %>
                      <strong>Nombre de Patients / heure :</strong> 
                            <%= form_for(@event, url: event_path(@event), html: { class: 'form' }) do |form| %>
                          <div class="row">
                          <div class = "col">
                            <%= form.number_field :patient_count, min: @event.site.min_patients, max: @event.site.max_patients, class: 'form-control' %>
                          </div>
                          <div class = "col">
                            <%= form.submit 'Ok', class: 'btn btn-primary' %>
                            <% end %>
                          </div>
                        </div>


                  <% else %>

                      <strong>Nombre de Patients / heure :</strong> 
                            <%= form_for(@event, url: event_path(@event), html: { class: 'form' }) do |form| %>
                          <div class="row">
                          <div class = "col">
                            <%= form.number_field :patient_count, min: @event.site.min_patients_helped, max: @event.site.max_patients_helped, class: 'form-control' %>
                          </div>
                          <div class = "col">
                            <%= form.submit 'Ok', class: 'btn btn-primary' %>
                            <% end %>
                          </div>
                        </div>
                  <% end %>
                  <% end %>

                  <hr>
                  <div class="text-center">
                      <% if event.user_id.present? %>
                        <%= link_to "#", class: 'btn btn-secondary m-1', disabled: true, style: 'pointer-events: none;' do %>
                          Réservé
                        <% end %>
                      <% else %>
                        <%= button_to booking_event_path(event), method: :put, data: { "turbo-confirm": 'Confirmez vous réaliser le remplacement sélectionné ?' }, class: 'btn btn-primary m-1' do %>
                          Réserver
                        <% end %>
                      <% end %>
                      </div>
</div>