<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card shadow-lg" style="background-color: #F7F7F7; width: 400px;">
    <div class="card-header text-center">
      <h2>Inscription</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
        <% if resource.errors.any? %>
        <div class="alert alert-danger" role="alert">
        <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <%end%>
   <div class="form-group mb-3">
          <%= f.label :last_name,"Nom" %>
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :first_name, "Prénom" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, "E-Mail" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de Passe" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation du Mot de Passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Valider", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<style>
    body {
      background-color: #ededed;
      font-family: Arial, sans-serif;
    }
    
    h1 {
      color: #333;
    }
    
    .card {
      border: 1px solid #ccc;
      border-radius: 10px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin: 20px;
    }
  </style>
