<div class="px-4 py-5 px-md-5 text-center text-lg-start m-3" style="background-color: hsl(0, 0%, 96%); border-radius: 8px;">
  <div class="container">
    <div class="row gx-lg-5 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <h1 class="my-5 display-3 fw-bold ls-tight">
          Création<br />
          <span class="text-primary">d'un compte Utilisateur</span>
        </h1>
        <p class="text-muted">
          Remplissez les informations essentielles pour créer votre compte.<br/>
          Vous pourrez compléter votre profil après l'inscription.
        </p>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card shadow">
          <div class="card-body py-5 px-md-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { class: "mt-4" }) do |f| %>
              <% if resource.errors.any? %>
                <div class="alert alert-danger" role="alert">
                  <h4><%= pluralize(resource.errors.count, "erreur") %> :</h4>
                  <ul>
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group mb-3">
                <%= f.label :title, "Titre", class: "form-label" %>
                <%= f.select :title, User::TITLE_OPTIONS, { prompt: "Sélectionnez un titre" }, { class: "form-select", required: true } %>
              </div>

              <div class="form-group row mb-3">
                <div class="col-md-6">
                  <%= f.label :last_name, "Nom", class: "form-label" %>
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", required: true %>
                </div>
                <div class="col-md-6">
                  <%= f.label :first_name, "Prénom", class: "form-label" %>
                  <%= f.text_field :first_name, class: "form-control", required: true %>
                </div>
              </div>

              <div class="form-group mb-3">
                <%= f.label :date_of_birth, "Date de naissance", class: "form-label" %>
                <%= f.date_field :date_of_birth, class: "form-control", required: true %>
              </div>

              <div class="form-group mb-3">
                <%= f.label :email, "E-Mail", class: "form-label" %>
                <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
              </div>

              <div class="form-group mb-3">
                <%= f.label :password, "Mot de Passe", class: "form-label" %>
                <% if @minimum_password_length %>
                  <em class="text-muted">(<%= @minimum_password_length %> caractères minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, minlength: @minimum_password_length %>
              </div>

              <div class="form-group mb-4">
                <%= f.label :password_confirmation, "Confirmation du Mot de Passe", class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
              </div>

              <hr class="my-4">

              <div class="d-grid gap-2">
                <%= f.button "S'inscrire", class: "btn btn-primary btn-lg", data: { disable_with: "Inscription en cours..." } %>
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
                <% end %>
              </div>

              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <div class="text-center mt-3">
                  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-muted" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
