<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white">Mot de passe oublié</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card m-3 shadow" }) do |f| %>
    <div class="card-body">
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
      <% end %>

      <div class="row g-3">
        <div class="col-md-12">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div class="form-text">Nous vous enverrons les instructions de réinitialisation par email.</div>
        </div>
      </div>

      <div class="mt-4">
        <%= f.submit "Réinitialiser mon mot de passe", class: "btn btn-primary" %>
        <%= link_to "Retour", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>
</div>