<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white">Liste des CDOM</h1>
    <%= link_to new_cdom_path, class: "btn btn-primary btn-lg shadow border border-2 border-white" do %>
      <i class="bi bi-plus-lg me-2"></i>Nouveau CDOM
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Département</th>
              <th>Nom</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @cdoms.each do |cdom| %>
              <tr>
                <td><%= cdom.departement %></td>
                <td><%= cdom.name %></td>
                <td><%= cdom.email %></td>
                <td>
                  <div class="btn-group gap-1">
                    <%= link_to edit_cdom_path(cdom), class: "btn btn-sm btn-outline-secondary rounded-pill" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to cdom_path(cdom), method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer ce CDOM ?" } } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
