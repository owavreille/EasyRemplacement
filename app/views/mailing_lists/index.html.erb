<div class="card m-3 shadow">
  <div class="card-header">
    <h3>Mailing List</h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr class="table-primary">
          <th>Nom</th>
          <th>Contenu</th>
          <th>Site</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @mailing_lists.each do |mailing_list| %>
          <tr>
            <td><%= mailing_list.name %></td>
            <td><%= truncate(mailing_list.text.to_plain_text, length: 20, omission: '...') %></td>
            <td>
              <% if mailing_list.site.present? %>
                <%= mailing_list.site.name %>
              <% else %>
                Tous les sites
              <% end %>
            </td>
            <td>
  <div class="btn-group" role="group">
    <%= link_to edit_mailing_list_path(mailing_list), class: 'btn btn-secondary btn-sm me-2 rounded' do %>
      <i class="bi bi-pencil-fill"></i>
    <% end %>
    <%= button_to mailing_list, method: :delete, data: { "turbo-confirm": 'Êtes-vous sûr de vouloir supprimer cette Mailing-list ?' }, class: 'btn btn-danger btn-sm me-2' do %>
      <i class="bi bi-trash-fill"></i>
    <% end %>
  </div>
</td>

          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

          <%= link_to new_mailing_list_path, aria: { label: 'Ajouter une nouvelle mailing-list' } do %>
          <i class="add-icon bi bi-plus-circle-fill"></i>
          <% end %>
