<div class="simple-calendar">
  <table class="table table-striped">
    <%= render 'simple_calendar/calendar_header', date_range: date_range %>
    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <%= render 'simple_calendar/day_cell', 
                         day: day, 
                         events: calendar.sorted_events_for(day),
                         favorite_site_ids: @favorite_site_ids %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
