  </div>
  <div class="col-md-6">
    <h3>Total Reversé par Médecin</h3>
    <%= column_chart @amount_paid_by_doctor, download: true, locale: 'fr' %>
  </div>
  <div class="col-md-6">
    <h3>Total des Revenus par Médecin</h3>
    <%= column_chart @amount_earned_by_doctor, download: true, locale: 'fr' %>
  </div>
</div>