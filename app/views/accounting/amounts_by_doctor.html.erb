<%= form_tag accounting_amounts_by_doctor_path, method: :get do %>
  <div class="form-group d-inline-block m-3">
    <%= label_tag :year, "Année:", class: "mr-1 text-white" %>
    <%= select_tag :year, options_for_select((2022..Date.today.year).to_a.reverse, params[:year]), prompt: "Sélectionnez une année", class: "form-control" %>
  </div>

  <div class="form-group d-inline-block m-3">
    <%= label_tag :month, "Mois:", class: "mr-1 text-white"%>
    <%= select_tag :month, options_for_select((1..12).map { |m| [I18n.t("date.month_names")[m], m] }, params[:month]), prompt: "Sélectionnez un mois", class: "form-control" %>
  </div>

  <%= submit_tag "Filtrer", class: "btn btn-secondary d-inline-block m-1" %>
  <%= link_to "Export CSV", accounting_amounts_by_doctor_path(format: :csv), class: "btn btn-secondary m-1" %>
<% end %>


<div class="chart-container row m-3">
  <div class="col-md-6">
    <h3>Total des Remplacements par Médecin</h3>
